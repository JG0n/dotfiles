#!/usr/bin/env bash
rofi_command="rofi -theme $HOME/.config/rofi/config/screenshot.rasi"

time=`date +%Y-%m-%d-%I-%M-%S`
geometry=`xrandr | head -n1 | cut -d',' -f2 | tr -d '[:blank:],current'`
dir="`xdg-user-dir PICTURES`/Screenshots"
file="Screenshot_${time}_${geometry}.png"

# Icons
timer="󱦟"

# Buttons
layout=`cat $HOME/.config/rofi/config/screenshot.rasi | grep BUTTON | cut -d'=' -f2 | tr -d '[:blank:],*/'`
if [[ "$layout" == "TRUE" ]]; then
    monitor="󰹑 "
    screen="󰍹 "
	area="󰆞 "
	window="󰖲 "
	# infive="󰔝 "
	# inten="󰔜 "
else
    monitor="󰹑  Capture Monitor"
    screen="󰍹  Capture Desktop"
	area="󰆞  Capture Area"
	window="󰖲  Capture Window"
	# infive="󰔝 Take in 3s"
	# inten="󰔜 Take in 10s"
fi

# Notify and view screenshot
notify_view () {
    wl-copy < ${dir}/"$file"
    notify-send -u low -i ${dir}/"$file" "Copied to clipboard."
    hyprctl dispatch "exec [float; pin] gwenview ${dir}/'$file'"
	# gwenview ${dir}/"$file"
	# if [[ -e "$dir/$file" ]]; then
	# 	notify-send -u low " Screenshot Saved."
	# else
	# 	notify-send -u low "󰆴 Screenshot Deleted."
	# fi
}

# countdown
countdown () {
	for sec in `seq $1 -1 1`; do
		notify-send -t 1000 "$timer Taking shot in : $sec"
		sleep 1
	done
}

# take shots
shotnow () {
    sleep 0.5 && grim ${dir}/"$file"
	notify_view
}

shot5 () {
	countdown '3'
	sleep 0.5 && grim ${dir}/"$file"
	notify_view
}

shot10 () {
	countdown '10'
	sleep 0.5 && grim ${dir}/"$file"
	notify_view
}

shotmon() {
    grim -o $(hyprctl -j activeworkspace | jq -r ".monitor") ${dir}/"$file"
    notify_view
}

shotwin () {
    sleep 0.5 && grim -g "$(hyprctl -j activewindow | jq -j '. | "\(.at[0]),\(.at[1]) \(.size[0])x\(.size[1])"')" ${dir}/"$file"
	notify_view
}

shotarea () {
	sleep 0.5 && grim -g "$(slurp)" ${dir}/"$file"
	notify_view
}

if [[ ! -d "$dir" ]]; then
	mkdir -p "$dir"
fi

# Variable passed to rofi
options="$monitor\n$area\n$window\n$screen\n"

chosen="$(echo -e "$options" | $rofi_command -p 'Take A Shot' -dmenu -selected-row 0)"
case $chosen in
    $monitor)
        shotmon
        ;;
    $area)
		shotarea
        ;;
    $window)
		shotwin
		;;
    $screen)
		shotnow
        ;;
		#   $infive)
		# shot5
		# ;;
		#   $inten)
		# shot10
		#       ;;
esac

