{
  // Workspaces
  "hyprland/workspaces": {
    "on-scroll-up": "hyprctl dispatch split-workspace r+1",
    "on-scroll-down": "hyprctl dispatch split-workspace r-1",
    //"on-click": "activate",
    "active-only": false,
    "all-outputs": false,
    "format": "{}",
    //"format-window-separator": "\n",
    "format-icons": {
      "urgent": "",
      "active": "",
      "default": "",
      "empty": "",
    },
    
  },

  // Taskbar
  "wlr/taskbar": {
    "format": "{icon}",
    "icon-size": 18,
    "tooltip-format": "{title}",
    "on-click": "activate",
    "on-click-middle": "close",
    "ignore-list": ["Alacritty", "kitty"],
    "app_ids-mapping": {
      "firefoxdeveloperedition": "firefox-developer-edition"
    },
    "rewrite": {
      "Firefox Web Browser": "Firefox",
      "Foot Server": "Terminal"
    }
  },


  // Sound source
  "custom/music": {
      "format": "   {}",
      "escape": true,
      "interval": 5,
      "tooltip": false,
      "exec": "playerctl metadata --format='{{ title }}'",
      "on-click": "playerctl play-pause",
      "max-length": 50
  },

  // Audio
  "pulseaudio": {
      // "scroll-step": 1, // %, can be a float
      "format": "{icon} {volume}%",
      "format-muted": "",
      "format-icons": {
          "default": ["", "", " "]
      },
      //"on-click": "pavucontrol"
      "on-click": "plasmawindowed org.kde.plasma.volume"
  },

  // Bluetooth
  "bluetooth": {
    "format": "  {status}",
    "format-disabled": "  {status}",
    "format-off": "  {status}",
    "interval": 30,
    //"on-click": "blueman-manager",
    "on-click": "plasmawindowed org.kde.plasma.bluetooth",
    "format-no-controller": ""
  },


  // Network
  "network": {
    "format": "{ifname}",
    "format-wifi": "    {signalStrength}%",
    "format-ethernet": "  {ifname}",
    "format-disconnected": "Disconnected",
    "tooltip-format": " {ifname} via {gwaddri}",
    "tooltip-format-wifi": "   {ifname} @ {essid}\nIP: {ipaddr}\nStrength: {signalStrength}%\nFreq: {frequency}MHz\nUp: {bandwidthUpBits} Down: {bandwidthDownBits}",
    "tooltip-format-ethernet": " {ifname}\nIP: {ipaddr}\n up: {bandwidthUpBits} down: {bandwidthDownBits}",
    "tooltip-format-disconnected": "Disconnected",
    "max-length": 50,
    //"on-click": "~/.config/ml4w/settings/networkmanager.sh",
    //"on-click-right": "~/.config/ml4w/scripts/nm-applet.sh toggle",
  },

  // Clock
  "clock": {
      "timezone": "Europe/Lisbon",
      "tooltip-format": "<big>{:%Y %B}</big>\n<tt><small>{calendar}</small></tt>",
      "format-alt": " {:%d/%m/%Y}",
      "format": " {:%H:%M}"
  },

  // Shutoff
  "custom/lock": {
      "tooltip": false,
      "on-click": "hyprlock",
      "format": "",
  },

  "custom/power": {
      "tooltip": false,
      "on-click": "wlogout &",
      "format": "襤"
  },

  //Backlight
  "backlight": {
      "device": "intel_backlight",
      "format": "{icon}",
      "format-icons": ["", "", "", "", "", "", "", "", ""],
      "scroll-step": 1,
  },

  "custom/ddcutil": {
    "format": "{percentage}% {icon}",
    "interval": 1,
    "format-icons": ["", "", ""],
    "exec": "python ~/.config/waybar/scripts/waybar-ddcutil.py",
    "return-type": "json"
    },

  "battery": {
      "states": {
          "warning": 30,
          "critical": 15
      },
      "format": "{icon}",
      "format-charging": "",
      "format-plugged": "",
      "format-alt": "{icon}",
      "format-icons": ["", "",  "", "", "", "", "", "", "", "", "", ""]
  }, 

  // System tray
  "tray": {
    "icon-size": 21,
    "spacing": 10
  },

  // Swaync
  "custom/notification": {
    "tooltip": false,
    "format": "{icon}",
    "format-icons": {
      "notification": " <span foreground='red'><sup></sup></span>",
      "none": " ",
      "dnd-notification": " <span foreground='red'><sup></sup></span>",
      "dnd-none": " ",
      "inhibited-notification": " <span foreground='red'><sup></sup></span>",
      "inhibited-none": " ",
      "dnd-inhibited-notification": " <span foreground='red'><sup></sup></span>",
      "dnd-inhibited-none": " "
    },
    "return-type": "json",
    "exec-if": "which swaync-client",
    "exec": "swaync-client -swb",
    "on-click": "swaync-client -t -sw",
    "on-click-right": "swaync-client -d -sw",
    "escape": true
  },

}
